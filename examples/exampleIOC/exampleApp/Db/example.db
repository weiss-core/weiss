record(calc, "test:seconds") {
  field(DESC, "time elapsed")
  field(INPA, "test:seconds")
  field(CALC, "A+0.1")
  field(SCAN, ".1 second")
  field(PREC, "3")
  field(EGU, "s")
}

record(ao, "test:freq"){
  field(DESC, "sin frequency")
  field(VAL, "0.5")
  field(DRVH, "1") # Limited freq due to 10Hz update on seconds
  field(HOPR, "1")
  field(DRVL, "0")
  field(LOPR, "0")
  field(EGU, "Hz")
}

record(ao, "test:ampl"){
  field(DESC, "sin amplitude")
  field(VAL, "5000")
  field(DRVH, "10000")
  field(HOPR, "10000")
  field(DRVL, "0")
  field(LOPR, "0")
}

record(ai, "test:ampl-rb"){
  field(DESC, "sin amplitude")
  field(INP, "test:ampl CPP")
  field(SCAN, ".1 second")
  field(MDEL, "-1") #force monitor event for plotting
}

record(calc, "test:sin"){
  field(DESC, "Sine wave")
  field(INPA, "test:seconds CP")
  field(INPB, "test:ampl")
  field(INPC, "test:freq")
  field(CALC, "B*SIN(2*PI*C*A)")
  field(PREC, "3")
  field(VAL, "0")
  field(EGU, "V")
}

record(compress, "test:sinArr"){
  field(DESC, "Sine array")
  field(ALG, "Circular Buffer")
  field(INP, "test:sin CP")
  field(NSAM, "80")
}

record(calc, "test:cos"){
  field(DESC, "Cosine wave")
  field(INPA, "test:seconds CP")
  field(INPB, "test:ampl")
  field(INPC, "test:freq")
  field(CALC, "B*COS(2*PI*C*A)")
  field(PREC, "3")
  field(VAL, "0")
  field(EGU, "V")
}

record(compress, "test:cosArr"){
  field(DESC, "Cosine array")
  field(ALG, "Circular Buffer")
  field(INP, "test:cos CP")
  field(NSAM, "80")
}

record(bo, "test:bo") {
  field(DESC, "Binary output")
  field(ZNAM, "Off")
  field(ONAM, "On")
  field(OUT, "test:bi PP")
}

record(bi, "test:bi") {
  field(DESC, "Binary input")
  field(ZNAM, "Off")
